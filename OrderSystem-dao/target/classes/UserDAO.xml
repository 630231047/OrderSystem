<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="www.jisheng.dao.UserDAO">
    <insert id="add" parameterType="www.jisheng.po.User" useGeneratedKeys="true" keyProperty="user_id">
        INSERT INTO users (username,password) values(#{username},#{password})
    </insert>
    <delete id="removeCusRole" parameterType="www.jisheng.po.User">
        DELETE FROM userandrole WHERE user_id AND role_id=#{id}
    </delete>
    <select id="checkLoginInfo" parameterType="www.jisheng.po.User" resultType="www.jisheng.po.User">
        SELECT username,password FROM users WHERE username=#{username}
    </select>
    <update id="updateUserPassword" >
        UPDATE users SET password=#{password} WHERE username=#{user.username}
    </update>
    <delete id="remove" parameterType="www.jisheng.po.User" >
        DELETE FROM users WHERE username=#{username}
    </delete>
    <select id="getUser" parameterType="www.jisheng.po.User" resultType="www.jisheng.po.User">
        SELECT user_id,username,password FROM users WHERE username=#{username}
    </select>
</mapper>